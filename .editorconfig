root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
tab_width = 4
trim_trailing_whitespace = true
indent_size = 4

[*.py]
max_line_length = 200

[*.yml]
tab_width = 2
indent_size = 2

[{Makefile,Makefile.am,Makefile.in,*.mak}]
indent_style = tab
indent_size = 8

[*.{diff,patch,md}]
trim_trailing_whitespace = false
